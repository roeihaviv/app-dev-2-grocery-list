<li id="<%= dom_id item, :edit %>" class="list-group-item">
  <%= form_with(model: item) do |form| %>
    <div class="mb-2">
      <%= form.label :content, class: "visually-hidden" %>
      <%= form.text_field :content, class: "form-control" %>
    </div>

    <div>
      <div class="d-grid">
        <%= form.submit class: "btn btn-outline-warning" %>
      </div>
    </div>
  <% end %>

</li>
